doctype html
html(lang="en")
- var version = "v0.2.1"
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="./styles.scss")
    title Simple Calendar
  body
    div#container
      #header
        #monthNameDisplay
        div.flex.gap-sm
          button#prevMonthBtn Prev
          button#currentMonth Today
          button#nextMonthBtn Next
      #weekdays.week
      #calendar.week

      .notes
        p Only one note per day for now. More features planned for later.
        p
          code#aboutButton #{version}


    #newEventModal.calendarModal
      div.modalContainer
        h2#eventTitle Add New Event
        p#eventDetails Event Details
        input#eventTitleInput(type="text", placeholder="Event Title")
        textarea#eventDetailsInput(name="details", placeholder="Event Description")
        .actions.flex.gap-md
          button#saveEventBtn.confirm Save Event
          button#cancelEventBtn.cancel Cancel
    #viewEventModal.calendarModal
      div.modalContainer
        h2#viewEventTitle {Event Title}
        p#viewEventDate {Event Date}
        p#viewEventDetails {Event Details}
        .actions.flex.gap-md
          button#editEventBtn.confirm.disabled(disabled title="Not implemented yet") Edit
          button#deleteEventBtn.delete Delete
          button#closeViewEventBtn.cancel Close
